@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<GrecosQuestionnaire.Models.QuestionItem>

@{
    ViewBag.Title = "Elementy pytania";
}

<div class="row">
    <div class="col-md-8"><h2>Pytania</h2></div>
    <div class="col-md-4" style="padding-top: 22px;">
        <a href="@Url.Action("Create", "QuestionItem", new { questionId = ViewBag.QuestionId })" role="button" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-plus"></span>
            Dodaj nowy element pytania
        </a>
    </div>
</div>

@Html.ActionLink("Wróć do listy pytań", "Index", "Question")

@{
    var questionId = ViewBag.QuestionId;
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Rodzaj</th>
            <th>Kolejność</th>
            <th>Tytuł</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.QuestionItemType
                </td>
                <td>
                    @item.ItemOrder
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "QuestionItem", new { id = item.Id }, null)" title="Edycja">
                        Edit
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a class="btn btn-primary" href="@Url.Action("Delete", "QuestionItem", new { id = item.Id }, null)" title="Edycja">
                        Delete
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, questionId, f = ViewBag.f }))

Elementów: @ViewBag.Count