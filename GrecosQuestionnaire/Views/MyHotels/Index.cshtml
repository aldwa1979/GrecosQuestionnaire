@model IEnumerable<HotelModel>


<div class="row">
    <div class="col-md-8"><h2>Moje Hotele</h2></div>
    <div class="col-md-4" style="padding-top: 22px;">
        <a href="@Url.Action("Import", "Hotel")" role="button" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-arrow-down"></span>
            Import z systemu Magic
        </a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Kod Hotelu</th>
            <th>Nazwa Hotelu</th>
            <th>Kraj</th>
            <th>Destynacja</th>
            <th>Sezon</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.HotelCode
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Country
            </td>
            <td>
                @item.Destination
            </td>
            <td>
                @item.Season
            </td>
            <td>
                
            </td>
            <td>
                
            </td>
        </tr>
        }
    </tbody>
</table>