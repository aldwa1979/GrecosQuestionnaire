@model IEnumerable<HotelModel>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Kod Hotelu</th>
            <th>Nazwa Hotelu</th>
            <th>Kraj</th>
            <th>Destynacja</th>
            <th>Sezon</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.HotelCode
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Country
            </td>
            <td>
                @item.Destination
            </td>
            <td>
                @item.Season
            </td>
            <td>
                @if (item.Response == true)
                {
                <a class="btn btn-primary" href="@Url.Action("Edit", "Survey", new { hotel = @item.Id }, null)" title="Elementy">
                    Edit
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                }
                else
                {
                <a class="btn btn-primary" href="@Url.Action("Index", "Survey", new { hotel = @item.Id }, null)" title="Elementy">
                New
                <span class="glyphicon glyphicon-th-list"></span>
                </a>
                }

            </td>
            <td>
                
            </td>
        </tr>
        }
    </tbody>
</table>