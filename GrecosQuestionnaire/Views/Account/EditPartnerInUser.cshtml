@model List<GrecosQuestionnaire.ViewModel.PartnerUserViewModel>


@{
    var userId = ViewBag.UserID;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove partners from this user</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">

                    <input type="hidden" asp-for="@Model[i].PartnerId" />
                    <input type="hidden" asp-for="@Model[i].PartnerName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].PartnerName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a class="btn btn-primary" asp-action="Edit" asp-controller="Account" asp-route-id="@userId" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

